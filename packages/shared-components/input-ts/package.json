{
  "name": "@jsdevtools/input-ts",
  "version": "0.1.0",
  "description": "Sample typescript component",
  "main": "dist/bundle.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "stylelint src/**/index.{j,t}s{,x}",
    "start": "webpack --watch --config webpack.config.js",
    "prepare": "yarn run build",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "build": "yarn build:types && yarn build:js && webpack --config webpack.config.js",
    "build:types": "tsc",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "test": "jest",
    "clean": "shx rm -f yarn-error.log && shx rm -rf dist lib"
  },
  "dependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@jsdevtools/babel-config-ts": "^0.1.0",
    "babel-loader": "^8.0.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1",
    "typescript": "^3.7.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "devDependencies": {
    "@jsdevtools/eslint-config-ts": "^0.1.0",
    "@jsdevtools/stylelint-config": "^0.1.0",
    "@types/node": "^13.1.2",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.1",
    "stylelint": "^12.0.1"
  },
  "stylelint": {
    "extends": "@jsdevtools/stylelint-config"
  },
  "babel": {
    "extends": "@jsdevtools/babel-config-ts"
  },
  "eslintConfig": {
    "extends": "@jsdevtools/eslint-config-ts"
  }
}
