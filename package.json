{
  "name": "@jsdevtools/create-monorepo",
  "version": "0.1.0",
  "description": "Skeleton monorepo",
  "private": true,
  "scripts": {
    "bs": "lerna init && lerna bootstrap",
    "clean": "shx rm -f yarn-error.log",
    "clean-all": "lerna clean --yes",
    "commit": "git-cz",
    "prerelease": "yarn rebuild",
    "release": "lerna publish",
    "rebuild": "lerna clean --yes && lerna init & lerna bootstrap && lerna run clean && lerna run build",
    "refresh": "yarn rebuild && lerna run build-storybook",
    "semver": "lerna-semver-sync",
    "storybook": "lerna run storybook --stream"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "lerna": "^3.13.4",
    "lerna-semver-sync": "^1.3.1",
    "semantic-release": "^15.13.27",
    "shx": "^0.3.2"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "cross-spawn": "^7.0.1",
    "fs-extra": "^8.1.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "resolutions": {},
  "workspaces": [
    "packages/*",
    "packages/configs/*",
    "packages/shared-components/*",
    "packages/backends/*",
    "packages/frontends/*",
    "packages/services/*",
    "packages/utilities/*",
    "./"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "prettier": "@jsdevtools/prettier-config",
  "eslintConfig": {
    "extends": "@jsdevtools/eslint-config"
  },
  "bin": {
    "create-monorepo": "./bin/cli.js"
  }
}
