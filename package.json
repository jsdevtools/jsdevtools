{
  "name": "@jsdevtools/monorepo-template",
  "version": "0.1.0",
  "description": "Skeleton monorepo",
  "private": true,
  "scripts": {
    "bs": "lerna init && lerna bootstrap",
    "build": "lerna run build",
    "clean-all": "lerna clean --yes && lerna run clean &&  shx rm -f yarn-error.log",
    "commit": "git-cz",
    "prerelease": "yarn rebuild",
    "release": "lerna publish",
    "rebuild": "yarn clean-all && yarn bs && yarn build",
    "refresh": "yarn rebuild && lerna run build-storybook",
    "semver": "lerna-semver-sync",
    "storybook": "lerna run storybook --stream"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "lerna": "^3.18.1",
    "lerna-semver-sync": "^1.3.1",
    "semantic-release": "^15.13.27",
    "shx": "^0.3.2"
  },
  "resolutions": {},
  "workspaces": [
    "packages/*",
    "packages/configs/*",
    "packages/shared-components/*",
    "packages/backends/*",
    "packages/frontends/*",
    "packages/services/*",
    "packages/utilities/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
